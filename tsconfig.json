{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "types": ["node"],                                      
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "skipLibCheck": true                                 
  }
}
